---
interface Props {
  text?: string;
  size?: 'sm' | 'md' | 'lg' | 'xs';
  href?: string;
  class?: string;
}

const { 
  text = "WORMHOLE", 
  size = "md",
  href,
  class: className = ""
} = Astro.props;

const sizes = {
  xs: "h-10 px-4 text-lg",
  sm: "h-14 px-6 text-xl",
  md: "h-24 px-10 text-3xl",
  lg: "h-32 px-12 text-4xl"
};
---

  <a href={href} class={`relative flex items-center justify-between bg-black rounded-[2rem] shadow-[0_8px_32px_rgba(0,0,0,0.4)] border border-white/30 overflow-hidden group hover:border-white/60 transition-all duration-500 ${sizes[size]} ${className}`}>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,transparent_30%,black_70%)] opacity-80"></div>
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,white_0%,transparent_70%)] opacity-5 group-hover:opacity-10 transition-opacity duration-700"></div>

    <!-- spinny stuffs -->
    <div class="absolute inset-0 flex items-center justify-center">
      <div class="w-[120%] h-[120%] border border-white/10 rounded-full animate-[spin_20s_linear_infinite]"></div>
      <div class="absolute w-[100%] h-[100%] border border-white/8 rounded-full animate-[spin_15s_linear_infinite]"></div>
      <div class="absolute w-[80%] h-[80%] border border-white/6 rounded-full animate-[spin_10s_linear_infinite]"></div>
    </div>
    
    <div class="relative z-10 flex items-center gap-1">
      <span class="z-10 font-bold font-[krypton] tracking-[0.2em] text-white select-none drop-shadow-[0_2px_8px_rgba(0,0,0,0.7)] mt-1.5">
        {text}
      </span>
    </div>
  </a>